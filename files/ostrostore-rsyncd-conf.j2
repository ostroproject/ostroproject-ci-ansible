[ostro]
        path = {{ store_base_path }}/ostro-os
        comment = "Ostro OS"
        uid = {{ jenkins_uid }}
        gid = {{ jenkins_gid }}
        read only = false
        list = false
        hosts allow = {{ workers_network: }}

[ostro-os-xt]
        path = {{ store_base_path }}/ostro-os-xt
        comment "Ostro OS XT"
        uid = {{ jenkins_uid }}
        gid = {{ jenkins_gid }}
        read only = false
        list = false
        hosts allow = {{ workers_network: }}
